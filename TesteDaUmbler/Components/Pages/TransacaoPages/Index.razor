@page "/transacoes"

@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using TesteDaUmbler.Models
@using TesteDaUmbler.Data
@inject AppDbContext DbContext
@implements IAsyncDisposable

<PageTitle>Transações</PageTitle>

<h1>Transações</h1>

<p>
    <a href="transacoes/create">Create New</a>
</p>

<QuickGrid Class="table" Items="DbContext.Transacao">
    <PropertyColumn Property="transacao => transacao.Valor" />
    <PropertyColumn Property="transacao => transacao.EstadoDaTransacao" />

    <TemplateColumn Context="transacao">
        <a href="@($"transacoes/edit?id={transacao.Id}")">Edit</a> |
        <a href="@($"transacoes/details?id={transacao.Id}")">Details</a> |
        <a href="@($"transacoes/delete?id={transacao.Id}")">Delete</a>
    </TemplateColumn>
</QuickGrid>

@code {
    public async ValueTask DisposeAsync()
    {
        if (DbContext != null)
        {
            await DbContext.DisposeAsync();
        }
    }
}
