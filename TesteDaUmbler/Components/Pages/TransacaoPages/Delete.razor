@page "/transacoes/delete"

@using Microsoft.EntityFrameworkCore
@using TesteDaUmbler.Models
@inject IDbContextFactory<TesteDaUmbler.Data.AppDbContext> DbFactory
@inject NavigationManager NavigationManager


<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Transacao</h4>
    <hr />
    @if (transacao is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Valor</dt>
            <dd class="col-sm-10">@transacao.Valor</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">EstadoDaTransacao</dt>
            <dd class="col-sm-10">@transacao.EstadoDaTransacao</dd>
        </dl>
        <EditForm method="post" Model="transacao" OnValidSubmit="DeleteTransacao" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(transacao is null)">Delete</button> |
            <a href="/transacoes">Back to List</a>
        </EditForm>
    }
</div>

@code {
    Transacao? transacao;

    [SupplyParameterFromQuery]
    public int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        transacao = await context.Transacao.FirstOrDefaultAsync(m => m.Id == Id);

        if (transacao is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    public async Task DeleteTransacao()
    {
        using var context = DbFactory.CreateDbContext();
        context.Transacao.Remove(transacao!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/transacoes");
    }
}
